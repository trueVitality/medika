include ../inc/_mixins

header
	nav#top
		div.container
			div.row
				div.col-sm-2
					div.logo
						+img('LOGO.png')
				div.col-sm-5.b
					div#top-links.nav.pull-left
						ul.list-inline
							- var links = ["Оплата", "Доставка", "Контакты", "Новости и статьи"];
								for name in links
									li
										a= name
				div.col-sm-2.b
					div#currency.pull-right
						ul.list-inline
							- var currency = ["€","$","ГРН","РУБ"];
								for name in currency
									li
										a= name
				div.col-sm-2.b
					div#language.pull-left
						ul.list-inline
							- var language = ["УКР","РУ","ENG"];
								for name in language
									li
										a= name
				div.col-sm-1.b
					div#login
						a.icon
							+img('icons/user.svg')
						a.text Войти
				div.col-sm-3
					div#phones
						ul.list-inline
							- var phones = ["(098) 462-99-66", "(050) 352-76-20", "(063) 237-62-23", "medica@voliacable.com"];
								for name in phones
									li= name
				div.col-sm-1
					div#callback-form.pull-right
						a.phone-icons
							+img('icons/callback.svg')
						.popup-form
							a.phone-icon
								+img('icons/callback.svg')
							a.close_icon
								+img('icons/close.svg')
							h4 ЗАКАЗАТЬ ЗВОНОК
							form
								input(placeholder='Ваше имя')
								input(placeholder='Контактный номер')
								button ПЕРЕЗВОНИТЬ
				div.col-sm-5
					div#search.pull-right
						span.input.input--hoshi
							input.input__field.input__field--hoshi#input-4(placeholder='Что вы ищете?')
							label.input__label.input__label--hoshi.input__label--hoshi-color-1(for="input-4")
								span.input__label-content.input__label-content--hoshi
						a.search-icons.pull-right
							+img('icons/search.svg')
				div.col-sm-1
					div#bascket
						a.empty
							img#empty_img(src='../img/icons/bascket_empty.svg')
						a.full
							img#full_img(src='../img/icons/bascket_item.svg')
							span.number 1
